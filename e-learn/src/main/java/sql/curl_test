// api create course
curl --location 'http://localhost:8081/api/v1/courses' \
--header 'Content-Type: application/json' \
--data '{
  "name": "Introduction to Golang",
  "description": "This course covers the basics of golang.",
  "status": 1,
  "teacher_id": 2
}'

// api update course
curl --location --request PUT 'http://localhost:8081/api/v1/courses/11' \
--header 'Content-Type: application/json' \
--data '{
    "name": "English 11",
    "description": "A beginner'\''s course on english 11.",
    "status": 0,
    "teacher_id": 2
}'

// api delete course
curl --location --request DELETE 'http://localhost:8081/api/v1/courses/9' \
--data ''

// api get course
curl --location --request GET 'http://localhost:8081/api/v1/courses?page=0&page_size=10' \
--header 'Content-Type: application/json' \
--data '{
   //"name": "Golang",
   //"status": "active",
   //"teacher_name": "Ms. Johnson",
   //"created_date_from": "2024-01-01",
   //"created_date_to": "2024-12-31",
   //"rating_from": 4,
   //"rating_to": 5.0
}'